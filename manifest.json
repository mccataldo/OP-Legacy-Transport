{
  "name": "ObservePoint Legacy Transport",
  "author": "Mike Cataldo",
  "description": "Manually copying audits and journeys from legacy field by field? Ain't nobody got time for that. This extension facilitates copying Web Audits and Web Journeys (Simulations) from the ObservePoint legacy platform to the new one.",
  "version": "0.4",
  "permissions": ["activeTab", "tabs", "storage"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

	"content_scripts": [{
			"matches": [
				"https://my.observepoint.com/audit/form*",
        "https://my.observepoint.com/simulation/form*",
        "https://app.observepoint.com/manage/folder/*"
			],
			"js": [
				"js/lib/jquery-3.1.1.min.js",
        "js/options.js",
        "js/copyJourney.js",
        "js/pasteJourney.js",
			 	"js/copyAudit.js",
			 	"js/pasteAudit.js"
			]
	}],
  "icons":{
    "16":  "images/icon16.png",
    "48":  "images/icon48.png",
    "128": "images/icon128.png",
    "512": "images/icon512.png"
  },
  "browser_action": {
  	"name": "OP Legacy Transport",
   	"default_icon": "images/icon.png",
    "default_title": "OP Legacy Transport"
   },
  "manifest_version": 2
}
